datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model EmailMap {
  box            String?
  createdAt      DateTime      @default(now())
  gDrive         String?
  id             String        @id @default(cuid())
  oneDrive       String?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?
  updatedAt      DateTime      @updatedAt
}

model Organization {
  createdAt DateTime   @default(now())
  emailMaps EmailMap[]
  id        String     @id @default(cuid())
  updatedAt DateTime   @updatedAt
}
